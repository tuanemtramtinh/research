    usecase "Upload Measurements" as UC6 #ADD8E6
    usecase "Authenticate User" as UC7 #ADD8E6

    ' New include / extend use cases (light gray)
    usecase "Validate Appointment Slot" as UC8 #EAEAEA
    usecase "Notify Patient of Invoice" as UC9 #EAEAEA
}

